{
    "openapi": "3.0.0",
    "info": {
      "title": "Delivery API",
      "version": "1.0.0",
      "description": "API for calculating delivery prices"
    },
    "paths": {
      "/api/v1/delivery/calculate-delivery": {
        "post": {
          "summary": "Calculate delivery price",
          "description": "Calculate the price for delivering an item based on the provided parameters",
          "parameters": [
            {
              "name": "zone",
              "in": "query",
              "description": "The delivery zone",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "organisationId",
              "in": "query",
              "description": "The organisation ID",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "totalDistance",
              "in": "query",
              "description": "The total distance",
              "required": true,
              "schema": {
                "type": "number"
              }
            },
            {
              "name": "itemType",
              "in": "query",
              "description": "The item type",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean"
                      },
                      "total_price": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Pricing not found",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    }
  }
  